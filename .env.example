# Copy this file to `.env` and adjust the values to match your environment before running the application.

# Server configuration
PORT=3000
HOST=0.0.0.0 # mantenha 0.0.0.0 em ambientes containerizados para aceitar conex√µes externas

# Database connection string for PostgreSQL (required in all environments).
# Replace the credentials and host below with the details of your database server.
DATABASE_URL=postgresql://olha_foto_app:replace-with-password@replace-with-host:5432/olha_foto

# PostgreSQL connection pool tuning
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000

# Authentication settings
JWT_SECRET=change-me
JWT_EXPIRATION=15m
REFRESH_TOKEN_TTL_DAYS=30

# Hasura GraphQL JWT configuration (JSON); keep key in sync with JWT_SECRET above once configured.
HASURA_GRAPHQL_JWT_SECRET={"type":"HS256","key":"change-me","claims_namespace":"https://hasura.io/jwt/claims","claims_format":"json"}

# Password hashing configuration
BCRYPT_SALT_ROUNDS=12

# Default Hasura role assigned to new users
DEFAULT_ROLE=user
